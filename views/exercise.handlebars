<header>
  <div class="navbar navbar-dark bg-dark shadow-sm">
    <div class="container d-flex justify-content-between">
      <a href="#" class="navbar-brand d-flex align-items-center">
        <img class="logo" src="/assets/img/Hyfit-Logo-White.png" alt="HyFit Logo">
      </a>
    </div>
  </div>
</header>

<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <img class="logo2" src="/assets/img/Hyfit-Logo-1.png" alt="HyFit Icon">
      <p>
        <a class="btn btn-secondary my-2" href="/">Home Workouts</a>
        <a class="btn btn-secondary my-2" href="/gym">Gym Workouts</a>
        <a class="btn btn-secondary my-2" href="/JE">Journal Entries</a>
      </p>
      <!--PLACE HOLDER HEADER-->
      <p class="lead text-muted">{{muscleGroup}}</p>

    </div>
  </section>

  <div>
    <div class="container">
      <!--PLACE HOLDER IMAGE-->
      <img class="headerimg" src="/assets/img/{{equipment}}/{{muscleGroup}}-{{equipment}}.jpg" alt="HyFit Workout">
      {{#each exercises}}
      <div class="btn btn-primary exercise-btn">{{dataValues.name}}</div>
      {{/each}}
      <p>Pick four workouts and do 3 sets of 10 reps</p>
    </div>
    <!--NOTE SECTION-->
    <div class="journal">
      {{!-- <form id="journal"> --}}
      <form>
        <div class="form-group">
          <label for="journalTitle">Workout Title</label>
          <input type="text" class="form-control" name="title" placeholder="{{muscleGroup}}-{{equipment}}-{{getDate}}"
            readonly>
        </div>
        <div class="form-group">

          <label for="journalBody">Notes</label>
          <textarea type="text" class="form-control form-control-lg" name="body" placeholder="Enter Workout Notes"
            rows="4"></textarea>

        </div>
        <button type="submit" class="btn btn-primary" name="submit" value="submit">Submit</button>
      </form>
    </div>
  </div>

</main>

<footer class="text-muted">
  <div class="container">
    <p class="float-right">
      <a href="#" style="color: #6c757d;">Back to top</a>
    </p>
    &copy; 2020 HyFit, Inc. | All Rights Reserved
  </div>
  <script type="text/javascript" src="/assets/js/execise.js"></script>
</footer>